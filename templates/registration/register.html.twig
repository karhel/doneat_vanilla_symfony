{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="section is-flex is-justify-content-center is-align-items-center is-fullheight">
    <div class="container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="notification is-danger">
                {{ flash_error }}
            </div>
        {% endfor %}

        <div class="columns is-centered">
            <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                <div class="box">
                    <h1 class="title is-3 has-text-centered">S'inscrire</h1>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}

                        <div class="field">
                            {{ form_label(registrationForm.email, "Adresse email", {'label_attr': {'class': 'label'}}) }}
                            <div class="control">
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'input'}}) }}
                            </div>
                            {{ form_errors(registrationForm.email) }}
                        </div>
                        
                        <div class="field">
                            {{ form_label(registrationForm.lastname, "Nom de famille", {'label_attr': {'class': 'label'}}) }}
                            <div class="control">
                                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'input'}}) }}
                            </div>
                            {{ form_errors(registrationForm.lastname) }}
                        </div>

                        <div class="field">
                            {{ form_label(registrationForm.firstname, "Prénom", {'label_attr': {'class': 'label'}}) }}
                            <div class="control">
                                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'input'}}) }}
                            </div>
                            {{ form_errors(registrationForm.firstname) }}
                        </div>

                        <div class="field">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'label'}}) }}
                            <div class="control">
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input'}}) }}
                            </div>
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="field">
                            <div class="control">
                                <label class="checkbox">
                                    {{ form_widget(registrationForm.agreeTerms) }}
                                    J'accepte les conditions générales
                                </label>
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div class="field is-grouped is-justify-content-center">
                            <div class="control">
                                <button type="submit" class="button is-link is-fullwidth">S'inscrire</button>
                            </div>
                        </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
