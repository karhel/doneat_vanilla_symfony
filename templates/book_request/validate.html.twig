{% extends 'content.html.twig' %}

{% block title %}Répondre à une réservation{% endblock %}

{% block content %}

<h1 class="title is-2 has-text-centered">Répondre à une demande</h1>

<h2 class="title is-3 has-text-centered">Repas sélectionné</h2>
{{ component('MealCard', { meal: bookRequest.meal, actions: false }) }}

<h2 class="title is-3 has-text-centered mt-5">Informations de la réservation</h2>
<p>La demande a été enregistrée le : {{ bookRequest.requestedAt|date }}</p>
<p>Par : {{ bookRequest.requestedBy }}</p>

{{ form_errors(validateMealBookRequestForm) }}

{{ form_start(validateMealBookRequestForm) }}

    <div class="field">
        {{ form_label(validateMealBookRequestForm.validationComment, "Commentaire, informations importantes...", {'label_attr': {'class': 'label'}}) }}
        <div class="control">
            {{ form_widget(validateMealBookRequestForm.validationComment, {'attr': {'class': 'textarea'}}) }}
        </div>
        {{ form_errors(validateMealBookRequestForm.validationComment) }}
    </div>
    
    <div class="field is-grouped is-justify-content-center">
        <div class="control">
            {{ form_widget(validateMealBookRequestForm.validate, {'attr': {'class': 'button is-fullwidth is-success'}}) }}
        </div>
    </div>
    
    <div class="field is-grouped is-justify-content-center">
        <div class="control">
            {{ form_widget(validateMealBookRequestForm.refuse, {'attr': {'class': 'button is-fullwidth is-danger'}}) }}
        </div>
    </div>

{{ form_end(validateMealBookRequestForm) }}

{% endblock %}
